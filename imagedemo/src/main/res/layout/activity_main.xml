<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bitmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="#eee"
            android:padding="10dp"
            android:text="Bitmap加载图片" />

        <TextView
            android:id="@+id/tv_glide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="#eee"
            android:padding="10dp"
            android:text="Glide加载图片" />

        <TextView
            android:id="@+id/tv_select_one_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="#eee"
            android:padding="10dp"
            android:text="选择一张图片" />

        <TextView
            android:id="@+id/tv_select_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="#eee"
            android:padding="10dp"
            android:text="选择图片" />

        <TextView
            android:id="@+id/tv_select_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="#eee"
            android:padding="10dp"
            android:text="选择视频" />

        <TextView
            android:id="@+id/tv_select_picture_or_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="#eee"
            android:padding="10dp"
            android:text="所有图片视频" />

        <!--        <LinearLayout-->
        <!--            android:id="@+id/ll_album"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:orientation="vertical" />-->
    </LinearLayout>
</ScrollView>